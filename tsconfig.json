{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": false,  // Disable strict type checking
    "noImplicitAny": false,  // Allow 'any' types
    "noImplicitReturns": false,  // Allow functions to not return a value
    "noImplicitThis": false,  // Allow 'this' to be implicitly of type 'any'
    "skipLibCheck": true,  // Skip type checks for third-party libraries
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
